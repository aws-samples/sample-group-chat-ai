# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Voice Synthesis Configuration
ENABLE_VOICE_SYNTHESIS=true
POLLY_CACHE_MINUTES=60
POLLY_ENABLE_STREAMING=true

# LLM Configuration
LLM_PROVIDER=bedrock
LLM_MODEL=anthropic.claude-sonnet-4-20250514-v1:0
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500
LLM_TIMEOUT=10000

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS Bedrock Configuration (if using Bedrock)
BEDROCK_REGION=us-west-2
BEDROCK_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# Routing Agent Configuration (Nova Pro for intelligent routing)
ROUTING_LLM_PROVIDER=bedrock
ROUTING_LLM_MODEL=amazon.nova-pro-v1:0
ROUTING_LLM_TEMPERATURE=0.3
ROUTING_LLM_MAX_TOKENS=1000

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_HISTORY=100
MAX_ACTIVE_PERSONAS=15

# Logging Configuration
LOG_LEVEL=info
