{
  "name": "@group-chat-ai/backend",
  "version": "1.0.0",
  "description": "Backend services for Group Chat AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:local": "NODE_ENV=development npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t group-chat-ai-backend .",
    "docker:run": "docker run -p 3000:3000 group-chat-ai-backend"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.9.0",
    "@aws-sdk/client-bedrock-runtime": "^3.882.0",
    "@aws-sdk/client-dynamodb": "^3.882.0",
    "@aws-sdk/client-polly": "^3.882.0",
    "@aws-sdk/client-s3": "^3.882.0",
    "@aws-sdk/client-ssm": "^3.882.0",
    "@aws-sdk/lib-dynamodb": "^3.882.0",
    "@types/multer": "1.4.13",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "8.18.1",
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "cors": "2.8.5",
    "dotenv": "16.0.0",
    "express": "^5.1.0",
    "helmet": "6.0.0",
    "jimp": "^0.22.12",
    "joi": "17.9.0",
    "multer": "^2.0.2",
    "openai": "4.20.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "9.0.0",
    "winston": "3.8.0",
    "ws": "8.18.2"
  },
  "devDependencies": {
    "@types/compression": "1.8.1",
    "@types/cors": "2.8.0",
    "@types/express": "4.17.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "2.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/uuid": "9.0.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
